<div class="container bg1">
  <div class="col-lg">
    <h2>Your Lists</h2>
  </div>
</div>

<h3 class="center">Add a Task</h3>

<form action="/lists" method="post">
  <div class="form-group">
    <label for="list_id">Select a List</label>
    <select id='list_id' name='list_id' type='text'>
      <% @lists.each() do |list| %>
        <option value="<%= list.id()%>"> <%= list.name() %> </option>
      <% end %>
    </select>
  </div>


  <label for="description">Description of the task:</label>
  <input id="description" name="description" type="text">

  <button class="btn btn-success" type="submit">Add task</button>
</form>

<% @lists.each() do |list| %>
<h3 class="center"><a href="list/<%= list.id() %>"><%= list.name() %></a>
  <form action="/lists/<%= list.id() %>" method="post">
    <input name="_method" type="hidden" value="delete">
    <button class="special" type="submit"><i class="fas fa-trash-alt"></i></button>
  </form>
</h3>
<% end %>
